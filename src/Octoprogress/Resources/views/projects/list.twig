{% extends "layout.twig" %}

{% block title %}
{{ user.login }} projects
{% endblock %}

{% block content %}
    <h2>Projects list (<a href="{{ path('projects_refresh') }}">refresh</a>)</h2>

    <form action="{{ path('projects') }}" method="post" {{ form_enctype(form) }}>
    <fieldset>
        <legend><blockquote>Select the projects you want to appear in <a href="{{ path('board')}}">your dashboard</a>.</blockquote></legend>
        {{ form_widget(form) }}
        {{ form_rest(form) }}
        <input class="btn btn-success" type="submit" value="Save"/>
   </fieldset>
    </form>
{% endblock %}

{% block javascripts %} {{ parent() }}
<script src="{{ app.request.basepath }}/octoprogress/js/jquery.toggle.buttons.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
        $('.toggle-button').toggleButtons({
            width: 85,
            style: {
                enabled: "success",
            }
        });
    });
</script>
{% endblock %}
