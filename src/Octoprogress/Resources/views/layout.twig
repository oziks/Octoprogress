{% set _route = app.request.get('_route') %}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{% block title '' %} - Octoprogress</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="See your GitHub projects progress at a glance.">
        <meta name="author" content="Morgan Brunot, Denis Roussel">
        <link href="{{ app.request.basepath }}/octoprogress/css/vendor/bootstrap.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/octoprogress/css/vendor/bootstrap-toggle-buttons.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/octoprogress/css/vendor/github.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/octoprogress/css/main.css" rel="stylesheet">
        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        <link rel="shortcut icon" href="{{ app.request.basepath }}/octoprogress/ico/favicon.ico">
    </head>

    <body>
        <div class="navbar navbar-static-top">
            <div class="navbar-inner">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="../"><span class="mini-icon blacktocat"></span> Octoprogress</a>
                <div class="nav-collapse" id="main-menu">
                    <ul class="nav pull-right" id="main-menu-left">
                    {% if app.session.get('isAuthenticated') %}
                        <li {% if _route == 'board' %}class="active"{% endif %}><a href="{{ path('board') }}">Board</a></li>
                        <li {% if _route == 'projects' %}class="active"{% endif %}><a href="{{ path('projects') }}">Projects</a></li>
                        <li><a href="{{ path('logout') }}">Logout</a></li>
                    {% endif %}
                    </ul>
                </div>
            </div>
        </div>
        <div id="content">
            {% block content %}{% endblock %}
        </div>
        <div id="footer">
            by <a title="GitHub account" href="https://github.com/oziks">Morgan Brunot</a> and <a title="GitHub account" href="https://github.com/KuiKui">Denis Roussel</a>.
        </div>
        <script src="{{ app.request.basepath }}/octoprogress/js/jquery.js"></script>
        <script src="{{ app.request.basepath }}/octoprogress/js/bootstrap.js"></script>
        <script src="{{ app.request.basepath }}/octoprogress/js/spin.min.js"></script>
        {% block javascripts %}{% endblock %}
        {% if app.debug == 0 %}
        <link href="{{ app.request.basepath }}/octoprogress/js/analytics.js" rel="stylesheet">
        {% endif %}
    </body>
</html>
